<div class="page-wrapper">
    <%- include('partials/header') %>
    <div class="container pb-5">
        <div class="d-flex flex-column row mt-2">
        <h1 class="text-center mt-3">Login</h1>
        <form class="d-flex justify-content-center col-md-12 col-lg-8 m-auto" action="/login" method="POST">
            <div class="row g-3 w-100 mt-2">
                <div class="col-md-5">
                    <input class="form-control" type="text" name="username" placeholder="username" required>
                </div>
                <div class="col-md-5 ">   
                    <input class="form-control" type="password" name="password" placeholder="password" required>
                </div>
                <div class="col-md-2">  
                    <button class="btn btn-primary col-sm-12">Sign in</button>
                </div>
            </div>
        </form>
        </div>
    </div>
    <%- include('partials/footer') %>
</div>