<div class="page-wrapper">
    <%- include('../partials/header') %>
    <div class="container pb-5">
        <div class="d-flex flex-column row mt-2">
        <h1 class="text-center mt-3">Edit <%= campground.name %></h1>
            <div style="min-width: 30em; margin: 1rem auto;">
                <form class="col-lg-6 m-auto" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="name" value="<%= campground.name %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="campground[price]" placeholder="price" value="<%= campground.price %>" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                    <input class="form-control" type="text" name="campground[img]" placeholder="image url" value="<%= campground.img %>">
                    </div>
                    <div class="form-group">
                    <textarea class="form-control editable" style="min-height: 15em;" type="text" name="campground[desc]" placeholder="description">
                        <%= campground.desc %>
                    </textarea>
                    </div>
                    <div class="form-group">
                    <button class="w-100 btn btn-primary" type="submit">Submit</button>
                    </div>
                    <a class="d-flex mt-2" href="/campgrounds">go back</a>
                </form>
                
            </div>
        </div>
    </div>
    <%- include('../partials/footer') %>
</div>