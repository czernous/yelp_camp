<div class="page-wrapper">
    <%- include('../partials/header') %>
    <div class="container pb-5">
        <div class="d-flex flex-column row mt-2">
        <h1 class="text-center my-3">Add a new comment to <%= campground.name %></h1>
            <div class="col-md-6 my-1 mx-auto">
                <form action="/campgrounds/<%= campground._id%>/comments " method="post">
                    <div class="form-group">
                    <textarea class="form-control" style="min-height: 15em;" type="text" name="comment[text]" placeholder="Write your comment"></textarea>
                    </div>
                    <div class="form-group">
                    <button class="w-100 btn btn-primary" type="submit">Submit</button>
                    </div>
                    <a class="d-flex mt-2" href="/campgrounds/<%= campground._id %>">go back</a>
                </form>
            </div>
        </div>
    </div>
    <%- include('../partials/footer') %>
</div>